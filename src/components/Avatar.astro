---
import { Image } from "astro:assets";
import avatarMetadata from "../assets/avatar.png";
---
<Image
  id="avatar"
  src={avatarMetadata}
  alt="Avatar representing Jon Chong"
  width="350"
  class="border-4 border-black rounded-full"
/>
<script>
  import avatar from "../assets/avatar.png";
  import avatarBlinking from "../assets/avatar-blinking.png";
  const avatarElement = document.getElementById("avatar")!;
  setInterval(() => {
    avatarElement.setAttribute("src", avatarBlinking.src);
    setTimeout(() => {
      avatarElement.setAttribute("src", avatar.src);
    }, 300);
  }, 2_500);
</script>
