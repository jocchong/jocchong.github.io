---
interface Props {
  href: string;
  inNewTab?: boolean;
}

const { href, inNewTab, ...rest } = Astro.props;
const additionalAttributes: any = {};
if (inNewTab) {
  additionalAttributes.target = "_blank";
  additionalAttributes.rel = "noreferrer noopener";
}
---

<a
  href={href}
  class="hover:underline text-amber-500"
  {...additionalAttributes}
  {...rest}><slot /></a
>
