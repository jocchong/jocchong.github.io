---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href="https://jocchong.github.io" />
    <title>{title} | Jon Chong</title>
  </head>
  <body
    class="bg-zinc-100 text-zinc-800 dark:bg-zinc-800 dark:text-zinc-300 text-base md:text-lg leading-normal font-normal text-justify transition-all duration-200"
  >
    <NavBar />
    <main><slot /></main>
    <Footer />
  </body>
</html>
