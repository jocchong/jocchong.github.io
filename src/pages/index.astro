---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
import Socials from "../components/Socials.astro";
import Avatar from "../components/Avatar.astro";
import portrait from "../assets/portrait.jpeg";
import professionalExperience from "../content/data/professional-experience.json";

const description =
  "The landing page for Jon Chong's personal blog, with a short section describing who he is and what he has done in his professional career.";
---

<Layout title="Home" description={description}>
  <div
    id="hero"
    class="grid lg:grid-cols-2 grid-cols-1 min-h-[92vh] bg-amber-400"
  >
    <div class="flex justify-center items-center pt-8 lg:bg-amber-600">
      <Avatar />
    </div>
    <div class="text-center flex flex-col justify-center items-center pb-8">
      <h1 class="text-[4.5rem] text-zinc-900 leading-normal font-extrabold">
        Jon Chong
      </h1>
      <Socials />
    </div>
  </div>
  <article id="about-me" class="container mx-auto space-y-2 px-4 py-12">
    <div class="grid lg:grid-cols-3 gap-12">
      <div class="col-span-2">
        <h2 class="text-3xl font-extrabold">About Me</h2>
        <div class="col-span-2 mt-2 space-y-4">
          <p>
            Hi, I'm Jon! üëãüèº I am a software engineer with 3+ years of experience
            in NodeJS and HTML/CSS/TypeScript. I have professional experience in
            both back end and front end development, and I'm passionate about
            building beautiful, user-friendly, and accessible applications.
          </p>
          <p>
            Outside of software development, I enjoy cooking new recipes, trying
            coffees from around the world, and reading science fiction.
          </p>
          <p>
            I was born & raised in the California Bay Area and now live in New
            York.
          </p>
          <p class="font-bold">
            ...And I'm currently looking for a full time position! Please reach
            out to me via email <Link href="mailto:jonchong56@gmail.com">
              here.
            </Link>
          </p>
        </div>
      </div>
      <figure class="flex flex-col">
        <Image
          src={portrait}
          alt="Portrait of Jon Chong"
        />
        <figcaption>
          Fall in Central Park <span class="text-zinc-500 text-sm"
            >Image:
            <Link href="https://www.instagram.com/bradtna/" inNewTab>
              Bradtna Lou
            </Link></span>
        </figcaption>
      </figure>
    </div>
  </article>
  <hr class="lg:mx-8" />
  <section id="what-ive-done" class="container mx-auto space-y-2 px-4 py-12">
    <article>
      <h2 class="text-3xl font-extrabold pt-2">What I've Done</h2>
      <section>
        <h3 class="text-2xl font-bold mt-4">Professional Experience</h3>
        <div class="py-2 my-2 space-y-2">
          {
            professionalExperience.map((item) => (
              <details class="px-4 py-2">
                <summary class="font-semibold hover:cursor-pointer">
                  {item.company}{" "}
                  <span class="text-zinc-500 text-sm">
                    <time>{item.startDate}</time> - <time>{item.endDate}</time>
                  </span>
                </summary>
                <div class="px-4 py-2 space-y-4">
                  <em>{item.jobTitle}</em>
                  <div>
                    <h4 class="font-semibold">Responsibilities</h4>
                    <p>{item.responsibilities}</p>
                  </div>
                  <div class="grid gap-4 lg:grid-cols-3 grid-cols-1">
                    <div class="lg:col-span-2">
                      <h4 class="font-semibold">Achievements</h4>
                      <ul class="list-disc list-inside">
                        {item.achievements.map((achievement) => (
                          <li>{achievement}</li>
                        ))}
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-semibold">Technologies</h4>
                      <ul class="list-disc list-inside">
                        {item.technologies.map((tech) => (
                          <li>{tech}</li>
                        ))}
                      </ul>
                    </div>
                  </div>
                </div>
              </details>
            ))
          }
        </div>
      </section>
      <section>
        <h3 class="text-2xl font-bold mt-4">Education</h3>
        <ul>
          <li>
            <div class="font-semibold">
              University of California, Santa Cruz
              <span class="text-zinc-500 text-sm">Jun 2020 - Jan 2023</span>
            </div>
            <p>B.S. Computer Science</p>
          </li>
        </ul>
      </section>
    </article>
  </section>
  <hr class="lg:mx-8" />
  <section
    id="selected-blog-posts"
    class="container mx-auto py-10 px-3 space-y-3"
  >
    <article>
      <h2 class="text-3xl font-extrabold pt-2">Selected Blog Posts</h2>
      <p class="py-4">üößüö® Under Construction üößüö®</p>
    </article>
  </section>
</Layout>
